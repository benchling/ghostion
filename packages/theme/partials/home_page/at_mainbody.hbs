<div id="at_mainbody" class="at_frontpage" role="main">
    <div class="row">
        <div class="medium-8 large-9 columns">
            {{#foreach posts}}
                <article class="{{post_class}} at_block">
                    <div class="at_post_header">
                        <h2 class="at_post_title"><a href="{{url}}">{{{title}}}</a></h2>
                    </div>
                    <div class="at_post_meta">
                        <span class="at_featured_post"><span class="fa fa-bookmark"></span> <span>Featured</span></span>
                        <time class="at_post_time" datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>

                        <span class="at_post_tags">{{#if tags}}<span class="fa fa-tags"></span>{{/if}} {{tags}}</span>
                    </div>
                    <div class="at_post_excerpt">
                        <p><a href="{{url}}">{{content words="0"}}</a></p>
                        <p>{{excerpt characters="350"}}&hellip;</p>
                        <a href="{{url}}" class="at_link_with_arrow"><span class="link">Read more</span><span class="fa fa-arrow-circle-o-right"></span></a>
                    </div>
                </article>
            {{/foreach}}
        </div>
        {{> all_page/at_sidebar }}
    </div>
</div>

