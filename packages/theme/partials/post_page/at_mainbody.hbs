<div id="at_mainbody" class="at_post" role="main">
    <div class="row">
        <div class="medium-8 large-9 columns">
            {{#post}}
            <div class="at_block">
                <article class="{{post_class}}">
                    <h2 class="at_post_title">{{title}}</h2>
                    <div class="at_post_meta">
                        <time class="at_post_time" datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
                        <span class="at_post_tags">{{#if tags}}<span class="fa fa-tags"></span>{{/if}} {{tags}}</span>
                    </div>
                    <div class="at_post_content">
                        {{content}}
                    </div>
                    <div class="at_author">
                        <div class="row">
                            <div class="medium-10 columns">
                                <div class="at_author_name">
                                    <h3>{{author.name}}</h3>
                                </div>
                                <div class="at_author_bio">
                                    {{author.bio}}
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            {{/post}}
        </div>
        {{> all_page/at_sidebar }}
    </div>
</div>